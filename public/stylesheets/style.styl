body
    color #333
    background-color #DDDDDD
    font-family "Trebuchet MS", "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", sans-serif

.header
    h1
        text-align center
        margin-bottom 5px
    small
        display block
        text-align center
        margin-top 10px

.container
    width 800px
    margin-left auto
    margin-right auto

ul
    padding-top 20px
    border-top 1px solid #bbb
    margin-left 0
    padding-left 0
    display inline-block

    li
        margin 10px 10px
        list-style none
        display inline-block
        width 140px
        height 140px
        box-shadow 0 0 10px #666
        text-align center
        color #fff
        padding-top 60px
        font-size 20px
        font-weight bold
        text-overflow ellipsis
        overflow hidden
        white-space nowrap
        box-sizing border-box

.tweetbox
    position absolute
    font-size 20px
    white-space nowrap
    width 100%
    right -100%
    height 18px

.new-tweet
    position absolute
    left 5%
    top 450px
    font-size 20px
    white-space nowrp
    width 100%